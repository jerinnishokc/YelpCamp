<% include ../partials/header %>
<div class="container">
	<h1>Edit <%= campground.name %></h1>	
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" value="<%= campground.desc %>" name="campground[desc]" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" value="<%= campground.url %>" name="campground[url]" class="form-control">
		</div>
		<input class="btn btn-primary btn-md" type="submit" value="Edit">
	</form>
</div>

<% include ../partials/footer %>