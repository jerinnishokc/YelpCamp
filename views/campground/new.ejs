<% include ../partials/header %>
<div class="container">
	<h1>Campground registration</h1>	
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<input type="text" placeholder="Campground name" name="name" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" placeholder="Description" name="desc" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" placeholder="Image URL" name="url" class="form-control">
		</div>
		<input class="btn btn-primary btn-md" type="submit" value="Create">
	</form>
</div>

